<launch>
    <!-- Setup for a timeout for the simulation run -->
    <!-- <arg name="set_timeout" default="false"/> -->
    <!-- <arg name="timeout" default="105"/> -->

    <!-- Vehicle's initial position -->
    <arg name="x" default="0"/>
    <arg name="y" default="0"/>
    <arg name="z" default="-1"/>
    <arg name="yaw" default="0"/>


    <include file="$(find uuv_gazebo_worlds)/launch/auv_underwater_world.launch">
        <!-- <arg name="set_timeout" value="true"/> -->
        <!-- <arg name="timeout" value="$(arg timeout)"/> -->
    </include>

    <include file="$(find auh_description)/launch/upload_auh_default.launch">
        <arg name="x" default="$(arg x)"/>
        <arg name="y" default="$(arg y)"/>
        <arg name="z" default="$(arg z)"/>
        <arg name="yaw" default="$(arg yaw)"/>
    </include>

    <include file="$(find uuv_control_utils)/launch/start_disturbance_manager.launch">
        <arg name="uuv_name" value="auh"/>
        <arg name="use_file" value="true"/>
        <arg name="disturbance_file" value="$(find uuv_tutorial_disturbances)/config/auh_disturbances.yaml"/>
    </include>
    
</launch>